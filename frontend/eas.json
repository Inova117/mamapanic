{
    "build": {
        "development": {
            "developmentClient": true,
            "distribution": "internal",
            "ios": {
                "simulator": true
            }
        },
        "preview": {
            "distribution": "internal",
            "ios": {
                "simulator": false,
                "resourceClass": "m-medium"
            },
            "android": {
                "buildType": "apk"
