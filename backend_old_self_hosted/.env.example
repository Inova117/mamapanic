# Database Configuration
MONGO_URL=mongodb://mongo:27017
DB_NAME=mama_respira

# Anthropic API Configuration
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# JWT Configuration
# Generate a secure random secret: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your_secure_random_secret_here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_DAYS=7

# Application URLs
BACKEND_URL=http://localhost:8000
FRONTEND_URL=http://localhost:8081

# Environment (development, staging, production)
ENVIRONMENT=development

# Email Configuration (Optional - for password reset)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# SMTP_FROM_EMAIL=noreply@mamarespira.com
# SMTP_FROM_NAME=Mam√° Respira

# Coach Account (Optional - email of the default coach)
COACH_EMAIL=coach@mamarespira.com

# Logging
LOG_LEVEL=INFO
